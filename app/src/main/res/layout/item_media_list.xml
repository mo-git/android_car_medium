<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:background="@color/color_1">
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white"
            android:background="@drawable/circular1_bg"
            android:text="dlskfls"/>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/color_red"
            android:layout_alignParentRight="true"
            android:text="在刊: 车媒介"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_cion"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:src="@drawable/picture3"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="15dp"
    >

        <TextView
            android:id="@+id/car_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车类型: "
            android:textColor="@color/gray"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/car_type_name"
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:text="所在城市: "
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_city_name"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="到期: "
            android:textColor="@color/gray"
            android:textSize="14sp"
        />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/tv_time_name"
            android:textColor="@color/gray"
            android:textSize="14sp"

            />


    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_corlor"
        android:layout_marginTop="@dimen/dp_5"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right">

        <TextView
            android:id="@+id/tv_cancle_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="取消任务"
            android:padding="5dp"
            android:background="@drawable/circular2_bg"
            android:textSize="12sp"
            android:textColor="@color/deep_6"/>

        <TextView
            android:id="@+id/tv_camare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="拍照"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@drawable/circular2_bg"
            android:textColor="@color/deep_6"/>

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="接任务"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@drawable/circular2_bg"
            android:textColor="@color/deep_6"/>



    </LinearLayout>

</LinearLayout>