<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center"
    android:id="@+id/ll_my_vaild"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/train_shape_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="校验信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/circular3_bg"
            android:textColor="@color/deep_6"
            android:hint="用户名"
            android:lines="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/circular3_bg"
            android:textColor="@color/deep_6"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="number"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_cone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:background="@drawable/circular3_bg"
                android:textColor="@color/deep_6"
                android:paddingLeft="@dimen/dp_10"
                android:inputType="number"
                android:maxLines="10"
                android:lines="1"
                android:ellipsize="end"
                android:hint="验证码"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"
                android:background="@drawable/circular7_bg"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:text="发送"
                android:gravity="center"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/circular8_bg"
            android:text="@string/msg"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CCCCCB" />

        <LinearLayout
            android:id="@+id/l_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/deep_6"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_button_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#CCCCCB" />

            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_3"
                android:text="提交"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>