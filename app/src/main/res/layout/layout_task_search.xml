<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
   android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_find_shop"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/search_task_bg"
        android:layout_toLeftOf="@+id/tv_cancla_search"
        >

        <ImageView
            android:id="@+id/iv_serch_cion"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <EditText

            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_serch_cion"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:background="@color/transparent"
            android:hint="请输入车牌号或广告类型"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>