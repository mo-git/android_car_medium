<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/view_bg"
              android:orientation="vertical"
              android:fitsSystemWindows="true">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_new" />


    <!-- 用户名密码 -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/line_corlor"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:text="手机号"
            />

            <EditText
                    android:id="@+id/change_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingRight="@dimen/dp_23"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_23"
                android:background="@color/line_corlor"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:text="验证码"
            />

            <TextView
                    android:id="@+id/tv_sendnum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发送验证码"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
            />

            <EditText
                    android:id="@+id/change_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:layout_toLeftOf="@id/tv_sendnum"
                    android:maxLength="16"
                    android:minWidth="@dimen/dp_50"
                    android:paddingLeft="@dimen/dp_23"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"/>

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_corlor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:text="密码"
            />

        <EditText
                android:id="@+id/change_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_23"
                android:paddingRight="@dimen/dp_23"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>
    </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_corlor"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:text="确认密码"
            />

            <EditText
                    android:id="@+id/change_password1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_23"
                    android:paddingRight="@dimen/dp_23"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_corlor"/>
    </LinearLayout>

    <!-- 登陆注册按钮-->

    <LinearLayout
            android:id="@+id/ll_change"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_23"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>